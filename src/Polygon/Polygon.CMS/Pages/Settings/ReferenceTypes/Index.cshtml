@page
@model Polygon.CMS.Pages.Settings.ReferenceTypes.ReferenceTypesModel
@{
    ViewData["Title"] = "ReferenceTypes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Navigation
{
    <partial name="Shared/_MainNavigation" model="Model.MainMenu" />
    <partial name="Shared/_Breadcrumbs" model="Model.Breadcrumb" />
}

<h1>ReferenceTypes</h1>

<div class="row">
    <div class="col-md-12">
        <button id="CreateReferenceType" data-toggle="modal" data-target="#tesseractModal" type="button" class="btn btn-primary">Create</button>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.ReferenceTypes.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var type in Model.ReferenceTypes)
                {
                    <tr>
                        <td>@type.Name</td>
                        <td>@type.Description</td>
                        <td>Details</td>
                        <td>Edit</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>There are no Reference Types. You'll need to create one.</p>
        }
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            $("#CreateReferenceType").click(function () {
                showModalWindow("/Settings/ReferenceTypes/CreateReferenceType", "medium");
            });
        });
    </script>
}